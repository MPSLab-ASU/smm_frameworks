#! /usr/bin/env python
import os
import subprocess

cwd = os.getcwd()
directories = []
for path in os.listdir(cwd):
	if os.path.isdir(path):
		directories.append(path)
for directory in directories:
	os.chdir(directory)
	print directory
	command = "make clean; smmmake --clean; rm mapping.txt; rm _cache-size;"
	subprocess.call(command, shell=True)
	os.chdir(cwd)
